<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oocl.johngao.smartcr.Activity.TakePhotoActivity">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.oocl.johngao.smartcr.MyView.SideBar
            android:id="@+id/sideBar"
            android:layout_width="33dp"
            android:layout_height="130dp"
            android:layout_above="@+id/photo_area"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/finish_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/picture_name"
            android:layout_alignBottom="@+id/picture_name"
            android:layout_alignStart="@+id/sideBar"
            android:background="@color/alpha"
            android:text="@string/finish_text"
            android:textColor="@color/theme_light_blue" />
        <ImageView
            android:id="@+id/dialog_bg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#1c1b1b"
            android:textSize="30dp"
            android:visibility="invisible"
            android:background="@drawable/bgofdialog"
            />
        <TextView
            android:id="@+id/dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@color/alpha"
            android:gravity="center"
            android:textColor="#1c1b1b"
            android:textSize="25dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/picture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="#00FFFFFF"
            android:textStyle="bold"
            android:textColor="@color/theme_blue"
            android:visibility="invisible"/>
        <RelativeLayout
            android:id="@+id/panel_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:padding="30dp">
            <Button
                android:id="@+id/btn_capture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_take_photo"
                android:layout_alignTop="@+id/light_btn"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/light_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:src="@drawable/offs"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"/>
            <ImageButton
                android:id="@+id/next_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:src="@drawable/next"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/photo_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@id/panel_take_photo"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/pic_container"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/black"
                android:layout_alignParentTop="true"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/picture_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="12dp"
                    ></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
        <!--<com.oocl.johngao.smartcr.MyView.CameraGrid
            android:id="@+id/masking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/photo_area"
            android:layout_alignParentTop="true"/>-->
        <!--<View
            android:id="@+id/focus_index"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_launcher"
            android:layout_above="@id/photo_area"/>-->
    </RelativeLayout>

</FrameLayout>
