            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="?android:attr/windowBackground"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/left_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/listbtnafter"
                        android:layout_gravity="start"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/l_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/title_home"
                        android:textSize="11sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom">
                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_wash1"
                        />

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_repair1"
                        />
                    <ImageView
                        android:id="@+id/img_take"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/takinga"
                        android:scaleType="centerInside"
                        android:background="?android:attr/windowBackground"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/right_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/right_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/setbefore"
                        android:layout_gravity="end"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/r_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/title_notifications"
                        android:textSize="11sp"
                        android:textColor="@color/black"/>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/view_drawer"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="end"/>
</android.support.v4.widget.DrawerLayout>

